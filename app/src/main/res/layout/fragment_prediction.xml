<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/predict"
    tools:context=".PredictionFragment">

        <TextView
        android:id="@+id/number_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:alpha="0.75"
        android:textAlignment="center"
        android:background="@color/white"
        android:text="ТУР X"
        android:textSize="35sp" />

        <TextView
            android:id="@+id/game1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.5"
            android:textAlignment="center"
            android:background="@color/white"
            android:text="@string/teams"
            android:layout_below="@+id/number_tour"
            android:textSize="35sp" />
        <TextView
            android:id="@+id/game1time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:textAlignment="center"
            android:background="@color/white"
            android:text="@string/time"
            android:layout_below="@+id/game1"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/scoreHome1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/game1time"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="110dp"
            android:alpha="0.5"
            android:background="@color/white"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/scoreAway1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/game1time"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/scoreHome1"
            android:alpha="0.5"
            android:background="@color/white"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/game2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scoreAway1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.5"
            android:textAlignment="center"
            android:background="@color/white"
            android:text="@string/teams"
            android:textSize="35sp" />
        <TextView
            android:id="@+id/game2time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:textAlignment="center"
            android:background="@color/white"
            android:text="@string/time"
            android:layout_below="@+id/game2"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/scoreHome2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/game2time"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="110dp"
            android:alpha="0.5"
            android:background="@color/white"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/scoreAway2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/game2time"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/scoreHome2"
            android:alpha="0.5"
            android:background="@color/white"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center" />
    </RelativeLayout>
</ScrollView>